<html ng-app="index">
<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css"> <!-- replace later with local -->
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script> <!-- replace later with local -->
<script type="text/javascript" src="js/index.js"></script>
<script type="text/javascript" src="js/indexController.js"></script>
</head>
<body ng-controller="indexController">
<div class="container">
  <h2>Web Crawler</h2>
  <form class="form-inline" role="form">
    <div class="form-group">
      <input type="text" ng-model="page" class="form-control" id="page" placeholder="Enter starting page">
    </div>
    <div class="form-group">
      <input type="text" ng-model="domain" class="form-control" id="domain" placeholder="Enter domain to index">
    </div>
    <div class="form-group">
      <input type="text" ng-model="localdirectory" class="form-control" id="directory" placeholder="Enter local directory">
    </div>
    <button type="submit" ng-click="crawl()" class="btn btn-default">Submit</button>
  </form>
</div>
</body>
</html>